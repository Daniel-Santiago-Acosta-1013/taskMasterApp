{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "skipLibCheck": true,

    /* Opciones espec√≠ficas de Node.js */
    "moduleResolution": "node",
    "noEmit": false,

    /* Linting */
    "strict": true,
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
